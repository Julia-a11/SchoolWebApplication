@model SchoolBusinessLogic.BindingModel.PaymentBindingModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Оплата</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label"></label>
                <input asp-for="Sum" class="form-control" id="sum" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input id="fullSum" readonly class="form-control" value="ViewBag.FullSum" />
            </div>
            <div class="form-group">
                <label asp-for="LessonId" class="control-label"></label>
                <select asp-for="LessonId" id="lesson" class="form-control" asp-items="ViewBag.LessonId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
