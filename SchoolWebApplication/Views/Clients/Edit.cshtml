@model SchoolBusinessLogic.BindingModel.ClientBindingModel

@{
    ViewData["Title"] = "Edit";

}

<div class="text-center mt-5">
    <h1>Изменение данных</h1>
</div>

<div class="text-center mt-5">
    <h4>Введите данные</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClientName" class="control-label mt-3"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientSurname" class="control-label mt-3"></label>
                <input asp-for="ClientSurname" class="form-control" />
                <span asp-validation-for="ClientSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPatronymic" class="control-label mt-3"></label>
                <input asp-for="ClientPatronymic" class="form-control" />
                <span asp-validation-for="ClientPatronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBirth" class="control-label mt-3"></label>
                <input asp-for="DateBirth" class="form-control" />
                <span asp-validation-for="DateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label mt-3"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label mt-3"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary w-100 mt-5" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

